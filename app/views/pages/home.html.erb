<div class="row">
	<% @courses.each do |course| %>
		<div class="col-md-4">
			<div class="card">
				<%= link_to course do %>
					<%= image_tag course.cover, class: "card-img-top" %>
				<% end %>
				<div class="card-body">
					<h5 class="card-title"><%= course.title %></h5>
					<% (1..course.star_number).each do %>
	          			<i class="fa-solid fa-star"></i>
	        		<% end %>
				</div>
			</div>
		</div>
	<% end %>
</div>